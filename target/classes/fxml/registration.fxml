<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="400" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sportsmanager.controller.RegistrationController">

    <center>
        <VBox alignment="TOP_CENTER" spacing="12" styleClass="card">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20"/>
            </padding>

            <!-- Logo/Title -->
            <VBox alignment="CENTER" spacing="5">
                <Label style="-fx-font-size: 40px;" text="ðŸ†"/>
                <Label style="-fx-font-size: 18px;" styleClass="title" text="Create Account"/>
                <Label styleClass="subtitle" text="Join Sports Manager" style="-fx-font-size: 11;"/>
            </VBox>

            <!-- Error Label -->
            <Label fx:id="errorLabel" style="-fx-text-fill: #f56565; -fx-font-weight: bold;" text="" wrapText="true"/>

            <!-- Username Field -->
            <VBox spacing="5">
                <Label styleClass="label" text="Username"/>
                <TextField fx:id="usernameField" promptText="Min 3 characters" style="-fx-font-size: 11;"/>
            </VBox>

            <!-- Full Name Field -->
            <VBox spacing="5">
                <Label styleClass="label" text="Full Name"/>
                <TextField fx:id="fullNameField" promptText="Enter your full name" style="-fx-font-size: 11;"/>
            </VBox>

            <!-- Email Field -->
            <VBox spacing="5">
                <Label styleClass="label" text="Email"/>
                <TextField fx:id="emailField" promptText="your@email.com" style="-fx-font-size: 11;"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label styleClass="label" text="Password"/>
                <PasswordField fx:id="passwordField" promptText="Min 6 characters" style="-fx-font-size: 11;"/>
            </VBox>

            <!-- Confirm Password Field -->
            <VBox spacing="5">
                <Label styleClass="label" text="Confirm Password"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password" style="-fx-font-size: 11;"/>
            </VBox>

            <!-- Role Selection -->
            <VBox spacing="5">
                <Label styleClass="label" text="Your Role"/>
                <ComboBox fx:id="roleCombo" style="-fx-font-size: 11; -fx-padding: 5;"/>
                <Label styleClass="subtitle" text="Different roles per tournament" style="-fx-font-size: 10;"/>
            </VBox>

            <!-- Register Button -->
            <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="40" style="-fx-font-size: 12;" styleClass="btn-primary" text="Create Account"/>

            <Separator/>

            <!-- Back Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="subtitle" text="Already have an account?"/>
                <Hyperlink fx:id="backLink" onAction="#handleBack" style="-fx-text-fill: #667eea;" text="Login here"/>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="5">
            <padding>
                <Insets bottom="20" top="20"/>
            </padding>
            <Label style="-fx-font-size: 11px;" styleClass="subtitle" text="Sports Event Manager Pro v3.0"/>
        </VBox>
    </bottom>

</BorderPane>