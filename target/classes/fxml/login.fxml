<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="450" styleClass="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.sportsmanager.controller.LoginController">

    <center>
        <VBox alignment="CENTER" maxHeight="500" maxWidth="400" spacing="25" styleClass="card">
            <padding>
                <Insets bottom="40" left="40" right="40" top="40"/>
            </padding>

            <!-- Logo/Title -->
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 60px;" text="ðŸ†"/>
                <Label style="-fx-font-size: 28px;" styleClass="title" text="Sports Manager Pro"/>
                <Label styleClass="subtitle" text="Login to your account"/>
            </VBox>

            <!-- Connection Status -->
            <Label fx:id="connectionLabel" onMouseClicked="#handleTestConnection" style="-fx-font-size: 12px; -fx-cursor: hand;" styleClass="subtitle" text="Connected"/>

            <Separator/>

            <!-- Error Label -->
            <Label fx:id="errorLabel" style="-fx-text-fill: #f56565; -fx-font-weight: bold;" text="" wrapText="true"/>

            <!-- Username Field -->
            <VBox spacing="8">
                <Label styleClass="label" text="Username"/>
                <TextField fx:id="usernameField" prefWidth="300" promptText="Enter your username"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8">
                <Label styleClass="label" text="Password"/>
                <PasswordField fx:id="passwordField" prefWidth="300" promptText="Enter your password"/>
            </VBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="45" prefWidth="300" style="-fx-font-size: 16px;" styleClass="btn-primary" text="Login"/>

            <Separator/>

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="subtitle" text="Don't have an account?"/>
                <Hyperlink fx:id="registerLink" onAction="#handleRegister" style="-fx-text-fill: #667eea;" text="Register here"/>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="5">
            <padding>
                <Insets bottom="20" top="20"/>
            </padding>
            <Label style="-fx-font-size: 11px;" styleClass="subtitle" text="Sports Event Manager Pro v3.0"/>
            <Label style="-fx-font-size: 10px;" styleClass="subtitle" text="Â© 2025 All Rights Reserved"/>
        </VBox>
    </bottom>

</BorderPane>